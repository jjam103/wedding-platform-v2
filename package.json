{
  "name": "destination-wedding-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "npm run build && jest",
    "test:quick": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:changed": "jest --onlyChanged",
    "test:changed:coverage": "jest --onlyChanged --coverage",
    "test:failed": "jest --onlyFailures",
    "test:fast": "jest --testNamePattern='@tag:fast'",
    "test:slow": "jest --testNamePattern='@tag:slow'",
    "test:critical": "jest --testNamePattern='@tag:critical'",
    "test:unit": "jest --testNamePattern='@tag:unit'",
    "test:tag": "jest --testNamePattern",
    "test:types": "tsc --noEmit",
    "test:build": "jest --testPathPattern=build",
    "test:contracts": "jest --testPathPattern=contracts",
    "test:all": "npm run test:types && npm run test && npm run test:e2e",
    "test:full": "npm run build && npm run test:quick && npm run test:e2e",
    "test:ci": "npm run test:types && npm run build && npm run test:quick && npm run test:e2e",
    "test:production": "NODE_ENV=production jest",
    "test:production-coverage": "NODE_ENV=production jest --coverage",
    "test:regression": "jest --testPathPattern=regression",
    "test:email": "jest --testPathPattern=email",
    "test:property": "jest --testPathPattern=property",
    "test:integration": "jest --testPathPattern=integration",
    "test:security": "jest --testPathPattern=security",
    "test:performance": "jest --testPathPattern=performance",
    "test:accessibility": "jest --testPathPattern=accessibility",
    "test:smoke": "jest --testPathPattern=smoke",
    "test:smoke:real": "jest __tests__/smoke/allRoutes.smoke.test.ts",
    "test:integration:real": "jest __tests__/integration/realApi.integration.test.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:admin": "playwright test admin-dashboard.spec.ts admin-pages-styling.spec.ts",
    "test:e2e:css": "playwright test css-delivery.spec.ts",
    "test:e2e:flows": "playwright test emailSending.spec.ts guestRegistration.spec.ts rsvpFlow.spec.ts",
    "test:e2e:accessibility": "playwright test keyboardNavigation.spec.ts screenReader.spec.ts",
    "test:audit": "node scripts/audit-hardcoded-values.mjs",
    "test:analyze": "node scripts/analyze-test-performance.mjs",
    "perf:check": "node scripts/check-performance-budgets.mjs",
    "perf:monitor": "node scripts/generate-test-metrics-report.mjs",
    "test:metrics": "node scripts/generate-test-metrics-report.mjs",
    "test:dashboard": "cat test-results/metrics/DASHBOARD.md",
    "alert:test-failure": "node scripts/send-test-failure-alert.mjs",
    "report:weekly": "node scripts/generate-weekly-test-report.mjs",
    "validate:contracts": "node scripts/validate-contracts.mjs",
    "diagnose:css": "node scripts/diagnose-css.mjs",
    "pretest:all": "npm run test:audit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@google/generative-ai": "^0.24.1",
    "@lexkit/editor": "^0.0.38",
    "@supabase/auth-helpers-nextjs": "^0.8.7",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.39.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "isomorphic-dompurify": "^2.9.0",
    "lucide-react": "^0.563.0",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "resend": "^6.8.0",
    "twilio": "^5.12.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.40.1",
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.11",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.18.0",
    "postcss": "^8",
    "tailwindcss": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
